# StudySync Development Environment

# ---------------------------------
# Environment Variables for Development
# ---------------------------------
STUDYSYNC_DEBUG=true
STUDYSYNC_LOG_LEVEL=DEBUG
STUDYSYNC_DATA_DIR=data

# ---------------------------------
# Database Configuration
# ---------------------------------

# For SQLite (default)
DATABASE_URL=sqlite:///studysync.db

# For PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/studysync_db

# ---------------------------------
# Email Notifications (optional)
# ---------------------------------
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ---------------------------------
# Webhook Notifications (optional)
# ---------------------------------
# SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# ---------------------------------
# Application Settings
# ---------------------------------
STUDYSYNC_MAX_GROUP_SIZE=50
STUDYSYNC_SESSION_REMINDER_HOURS=2
STUDYSYNC_BACKUP_ENABLED=true
STUDYSYNC_BACKUP_INTERVAL_HOURS=24
